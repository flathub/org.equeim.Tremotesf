{
    "app-id": "org.equeim.Tremotesf",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "tremotesf",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--filesystem=host:ro",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.freedesktop.FileManager1"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/lib/*.a"
    ],
    "modules": [
        {
            "name" : "fmt",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DCMAKE_INTERPROCEDURAL_OPTIMIZATION=ON",
                "-DFMT_DOC=OFF",
                "-DFMT_TEST=OFF"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/fmtlib/fmt/releases/download/10.0.0/fmt-10.0.0.zip",
                    "sha256" : "4943cb165f3f587f26da834d3056ee8733c397e024145ca7d2a8a96bb71ac281"
                }
            ]
        },
        {
            "name" : "cxxopts",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DCMAKE_INTERPROCEDURAL_OPTIMIZATION=ON",
                "-DCXXOPTS_BUILD_EXAMPLES=OFF",
                "-DCXXOPTS_BUILD_TESTS=OFF"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/jarro2783/cxxopts/archive/refs/tags/v3.1.1.tar.gz",
                    "sha256" : "523175f792eb0ff04f9e653c90746c12655f10cb70f1d5e6d6d9491420298a08"
                }
            ]
        },
        {
            "name" : "cpp-httplib",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DCMAKE_INTERPROCEDURAL_OPTIMIZATION=ON",
                "-DHTTPLIB_REQUIRE_OPENSSL=ON"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/yhirose/cpp-httplib/archive/refs/tags/v0.12.5.tar.gz",
                    "sha256" : "b488f3fa9c6bf35608c3d9a5b69be52e016bbf2fbfe67e5ee684eadb2655493e"
                }
            ]
        },
        {
            "name": "tremotesf",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DCMAKE_INTERPROCEDURAL_OPTIMIZATION=ON"
            ],
            "run-tests": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/equeim/tremotesf2/releases/download/2.4.0/tremotesf-2.4.0.tar.zst",
                    "sha256": "bb36aae53527f5ef1ded12d12dfb83c6be39e2bfbc7a0c9dcde5275fbb3dbe4f"
                }
            ]
        }
    ]
}
